<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-2 text-center">Your Cart</h2><hr>
  <table class="table-auto">
    <% cart.line_items.each do |line_item| %>
      <tr class="border-b border-gray-200 <%= 'line-item-highlight' if line_item == @current_item %>">
        <td class="text-right px-2 py-3"><%= line_item.quantity %></td>
        <td class="px-2">&times;</td>
        <td class="px-2 py-3">
          <span class="text-gray-800"><%= line_item.product.title %></span>
          <%= button_to 'Delete', line_item_path(line_item),
                        method: :delete,
                        class: 'ml-4 rounded-lg py-1 px-2 text-sm bg-red-50 text-red-600 hover:bg-red-100' %>
        </td>
        <td class="text-right font-bold px-4 py-3 w-32">
          <%= number_to_currency(line_item.total_price) %>
        </td>
      </tr>
    <% end %>
    <tfoot>
    <tr>
      <td class="pt-3" colspan="2"></td>
      <td class="text-right pt-3 pr-2 font-bold">Total:</td>
      <td class="text-right font-bold px-4 pt-3 border-t-2 border-black w-32"><hr>
        <%= number_to_currency(cart.total_price) %>
      </td>
    </tr>
    </tfoot>
  </table>
  <div class="flex mt-1">
    <div style="margin-right: 1rem;">
      <%= button_to 'Empty Cart', cart, method: :delete,
                    class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
    </div>
    <div>
      <%= button_to 'Checkout', new_order_path, method: :get,
                    class: 'rounded-lg py-1 px-2 text-white bg-green-600' %>
    </div>
  </div>
</div>